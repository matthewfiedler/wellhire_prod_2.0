"layout": "public"

;;;


%section.no-padding-top
	.container
		.row
			.col-lg-12
				.page-header.margin-bottom.inline-block.full-width
					.row
						.col-sm-6
							%h2.no-margin-bottom
								Let's Get Started
						.col-sm-6
							%p.no-margin-bottom.half-margin-top.text-right
								Already a member?
								%a{:href=>"/log_in"}
									Log In Instead
		.row
			.col-lg-12
				%p.margin-bottom
					Select a plan, all plans come with a free 2 day no risk trial, cancel anytime.
				#pricing-sign-up
					=partial"/home/_pricing_tiers"	
		.row#sign-up
			.col-sm-8
				.double-margin-bottom
					%p.double-margin-bottom
						The Basics
					%form.form-horizontal{:role=>"form"}
						/ email
						.form-group.has-success
							%lebel.col-sm-4.control-label
								Email
							.col-sm-8
								%input.input-lg.form-control{:type=>"email", :placeholder=>"ex:John@doe.com"}
						/ first name
						.form-group.has-error
							%lebel.col-sm-4.control-label
								First Name
							.col-sm-8
								%input.input-lg.form-control
						/ last name
						.form-group.has-warning
							%lebel.col-sm-4.control-label
								Last Name
							.col-sm-8
								%input.input-lg.form-control
				.double-margin-bottom
					%p.double-margin-bottom
						Payment Information
					%form.form-horizontal{:role=>"form"}
						/ card type
						.form-group
							%lebel.col-sm-4.control-label
								Card Type
							.col-sm-8
								%select.input-lg.form-control
									%option
										Visa
						/ card number
						.form-group
							%lebel.col-sm-4.control-label
								Card Number
							.col-sm-8
								%input.input-lg.form-control
						/ expiration date
						.form-group
							%lebel.col-sm-4.control-label
								Expiration Date
							.col-sm-8
								.row
									.col-sm-6
										%select.input-lg.form-control.margin-bottom
											%option
												01-Jan
									.col-sm-6
										%select.input-lg.form-control
											%option
												2016
						/ card type
						.form-group
							%lebel.col-sm-4.control-label
								CVV2 Code
							.col-sm-8
								%input.input-lg.form-control
						.form-group
							.col-sm-12
								%a.btn.btn-primary.pull-right{:href=>"/thank_you"}
									Sign Up
			.col-sm-1
			.col-sm-3
				.testimonial.double-margin-bottom.double-margin-top
					.padded.testimonial-bub.double-margin-bottom
						%p
							Lorem ipsum dolor sit amet, consecur aiscing elit.
					.row
						.col-xs-4
							%img.img-circle.full-width-image{:src=>"images/public/avatar.png"}
						.col-xs-8
							%h5.no-margin-bottom
								John Smith
							%h6
								Title
				%h5
					If its free to start, why do we ask?
				%p
					Should you decide to use Wellhire beyond the free trial period,
					we'll use this payment method to charge your account and avoid
					any disruption to your service.  


